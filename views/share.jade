doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='icon', href='http://icons.iconarchive.com/icons/custom-icon-design/pretty-office-12/512/SMS-Message-icon.png')
    title Elite-SMS Signup
    link(rel='stylesheet', href='/boot/css/bootstrap.min.css')
    link(rel='stylesheet', href='/boot/css/animate.css')
    link(rel='stylesheet', href='/style.css')
    style.
     #header-content
     {
       margin-top:20px;
     }
     #login
     {
       margin-bottom:10px
     }
     #submit-btn 
     {
      width: 100%;
      padding: 20px;
      margin-bottom: 20px;
      }
      h3
      {
          text-align:left
      }
    
       .navbar-default
       {
         
         background-color:white;
         padding-bottom:10px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        
       }
       .navbar-default .navbar-nav>li>a {
         padding-top:10px;
            color: #777;
        }
  body
  
    .container-fluid
      nav.navbar.navbar-default
       .container-fluid
   
        .navbar-header
         
          a.navbar-brand(href='/') 
           img(src='/Homepage/images/logo.png', alt='alternative')
   
       
           
           
            
      
      .col-md-12#headerImage1
       #header-content
         .col-md-4
         .col-md-4#login
           .jumbotron
           
            h3 #{user.companyname}
            h6 Register to Elite-SMS
            h6 #{group.name}
            hr
           
           
            != messages('message', locals)
       
              form(action='/addCustomer/#{user.companyname}/#{group.name}',method='POST')
                        .form-group
                          .form-label-group
                            label(for='firstname') Enter Firstname
                            input#firstname.form-control(type='text',name='firstname', placeholder='Enter Firstname', required='required')
                            
                        .form-group
                          .form-label-group
                            label(for='lastname') Enter Lastname
                            input#lastname.form-control(type='text',name='lastname', placeholder='Enter Lastname', required='required')
                            
                        .form-group
                          .form-label-group
                            label(for='phone') Enter Phone Number e.g 254799******
                            input#phone.form-control(type='tel',name='phone', pattern="[0-9]{12}",placeholder='Enter Phone Number', required='required')
                            
                            
                        button#submit-btn.btn.btn-success.btn-block Submit
             
            
         .col-md-4
        
      
             
   
    script(src='./boot/js/jquery-1.12.4.min.js')
    script(src='./boot/js/bootstrap.min.js')
